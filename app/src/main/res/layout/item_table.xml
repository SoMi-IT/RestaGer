<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/dark_800"
    app:cardElevation="4sp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_table_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12sp">

        <TextView
            android:id="@+id/tv_table_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textColor="@color/white_100"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_table_item_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:paddingBottom="20sp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_table_item_number"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room:"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_table_item_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:text="room"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_table_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:text="null"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seats:"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_table_item_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8sp"
                    android:text="X"
                    android:textColor="@color/white_100"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_table_item_number"
            app:layout_constraintBottom_toBottomOf="@id/ll_table_item_base"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_table_item_notes"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginBottom="8sp"
                app:srcCompat="@android:drawable/ic_dialog_info" />

            <ImageView
                android:id="@+id/iv_table_item_location"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginTop="8sp"
                app:srcCompat="@android:drawable/ic_dialog_map"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>